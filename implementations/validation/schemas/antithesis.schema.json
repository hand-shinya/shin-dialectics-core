{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AntithesisSet",
  "type": "object",
  "required": [
    "thesis",
    "axes",
    "claims",
    "meta"
  ],
  "properties": {
    "thesis": {
      "type": "string",
      "minLength": 1
    },
    "axes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "claims": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "meta": {
      "type": "object",
      "required": [
        "mode",
        "lambda_a",
        "i_e_ratio"
      ],
      "properties": {
        "mode": {
          "type": "string",
          "enum": [
            "demo",
            "production"
          ]
        },
        "lambda_a": {
          "type": "integer",
          "minimum": 0
        },
        "i_e_ratio": {
          "type": "object",
          "required": [
            "internal",
            "external"
          ],
          "properties": {
            "internal": {
              "type": "integer",
              "minimum": 0
            },
            "external": {
              "type": "integer",
              "minimum": 0
            }
          }
        }
      }
    }
  }
}