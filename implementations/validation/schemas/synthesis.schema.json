{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SynthesisReport",
  "type": "object",
  "required": [
    "thesis",
    "guardrails",
    "thresholds",
    "decision"
  ],
  "properties": {
    "thesis": {
      "type": "string",
      "minLength": 1
    },
    "guardrails": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "axis",
          "priority",
          "risk"
        ],
        "properties": {
          "axis": {
            "type": "string"
          },
          "priority": {
            "type": "string"
          },
          "risk": {
            "type": "string"
          }
        }
      }
    },
    "thresholds": {
      "type": "object",
      "required": [
        "lambda_p",
        "lambda_a",
        "lambda_s",
        "lambda_i",
        "tau_stop",
        "u_max"
      ],
      "properties": {
        "lambda_p": {
          "type": "integer",
          "minimum": 0
        },
        "lambda_a": {
          "type": "integer",
          "minimum": 0
        },
        "lambda_s": {
          "type": "integer",
          "minimum": 0
        },
        "lambda_i": {
          "type": "integer",
          "minimum": 0
        },
        "tau_stop": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "u_max": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        }
      }
    },
    "decision": {
      "type": "object",
      "required": [
        "action",
        "rationale"
      ],
      "properties": {
        "action": {
          "type": "string",
          "enum": [
            "explore_more",
            "consolidate",
            "abort"
          ]
        },
        "rationale": {
          "type": "string"
        }
      }
    }
  }
}